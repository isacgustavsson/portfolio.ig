<div class="container">

<div id="hero"></div>
<div id="heroHead">
    <img src="/img/heroHead.png" alt="">
</div>

<div id="homeHead">
  <h1>Hello.</h1>
  <br>
  <p>
    I am a Graphic Design & Web Development student from Jönköping, Sweden.
  </p>
  
  <h2>I'm glad that you're here.</h2>

  <p>This website is a backend project which was built using Node.js, Express, SQLite3,
    Handlebars.js & CSS.
  </p>

    <h3>Let's Talk!</h3>

  <p>You can leave a message in the guestbook by filling out the form below. 
    The message will be posted as a comment for anyone to see! Please be kind. </p>



</div>


<form id="guestBook" class="form" action="/submit-comment" method="POST">
  <label id="formlabel" for="guestBook"> <h1>Guestbook</h1></label>
  <label id="namelabel" for="name"><p>Name:</p> </label>
  <input
    type="text"
    id="name"
    name="name"
    placeholder="Example Exampleson.."
    required
  />

  <label for="email">Email:</label>
  <input
    type="email"
    id="email"
    name="email"
    placeholder="example@forinstance.com"
    required
  />

  <label for="comment">Comment:</label>
  <textarea
    id="comment"
    max-length="500"
    name="comment"
    placeholder="Wow! Your work is amazing!"
    required
  ></textarea>

  <button type="submit">Submit</button>
</form>

</div>



<div class="commentWrapper">
{{#each comments}}
  <div class="commentContainer">
    <div id="namedate">
    <h3>{{gname}}</h3>
        <p id="date">{{gdate}}</p>
        </div>

    <p>{{gcomment}}</p>


                {{#if ../isAdmin}}
            <div id="btn">
          <a href="/edit/{{gid}}">Edit.</a>
          <a  href="/delete/{{gid}}" class="important">Delete.</a>
          </div>
        {{/if}}

  </div>
{{/each}}
</div>
